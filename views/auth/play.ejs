<%- include ../include/header.ejs %>



<div id="salle" class=" row">
    <div class="col-md-8">
        <div class="panel panel-success">
            <div class="panel-heading">Room : <%= user.game.name %></div>
            <div id="container_draw" class="panel-body">

            </div>
            <div class="clear"></div>
            <div class="panel-footer">
                <div class="btn-group btn-group-justified btn-group-sm" id="tools">
                    <a class="btn btn-default" id="swipe">
                        <span class="glyphicon glyphicon-unchecked"></span>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4" id="container_chat">
        <div class="panel panel-primary">
            <div class="panel-heading">Game</div>
            <div class="panel-body">
                    <small><em>Game</em></small>
                    <div class="progress">
                      <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                        <span class="sr-only">60% Complete (warning)</span>
                      </div>
                    </div>

                    <small><em>Handle</em></small>
                    <div class="progress">
                      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%">
                        <span class="sr-only">20% Complete</span>
                      </div>
                    </div>

            </div>
            <div class="panel-footer">
                <button onclick="canvas.toggleEventDraw()">Disabled draw</button>
            </div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">Chat</div>
            <div class="panel-body" id="messagesArea">

            </div>
            <div class="panel-footer">
                <form action="" class="form-inline row" id="chatForm">
                    <div class="form-group col-md-8 col-sm-8">
                        <label class="sr-only" for="text">Chat...</label>
                        <input type="text" class="form-control" id="text" placeholder="Chat...">
                    </div>
                    <button type="submit" class="btn btn-primary col-md-4 col-sm-4"">Send</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="/static/js/libs/socket.io.min.js"></script>
<script type="text/javascript" src="/static/js/libs/moment.min.js"></script>
<script type="text/javascript" src="/static/js/salle/socketCom.js"></script>
<script type="text/javascript" src="/static/js/salle/draw.js"></script>
<script type="text/javascript" src="/static/js/salle/colors.js"></script>
<%- include ../include/footer.ejs %>